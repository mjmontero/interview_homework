<div class="page-title">
  <div class="title_left">
    <h3>
      Students for <small> <%= @student_homeworks.first.homework.title  %> </small>
    </h3>
  </div>
</div>

<p id="notice"><%= notice %></p>


<div class="row">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">

      <div class="x_content">

        <table id="student_homeworks_table" class="table table-striped">
          <thead>
            <tr>
              <th>Student</th>
              <th>Answers</th>
            </tr>
          </thead>
          <tbody>
            <% @student_homeworks.each do |student_homework| %>
              <tr>
                <td><%= student_homework.student.username  %></td>
                <% if @answers.empty? %>
                  <td> None </td>
                <% else %>
                  <td><%= link_to 'View', answers_path(homework_id: student_homework.homework_id, student_id: student_homework.student_id) %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<div class="actionBar">
  <%= link_to 'Back', homeworks_path, :class => "btn btn-default" %>
</div>


