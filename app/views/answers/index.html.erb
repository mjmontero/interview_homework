<div class="page-title">
  <div class="title_left">
    <h1><%= @answers.first.homework.title %></h1>
    <h3><%= @answers.first.homework.question %></h3>
    <h2>
      Student: <%= @answers.first.student.username  %> 
    </h2>
  </div>
</div>

<p id="notice"><%= notice %></p>


<div class="row">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">

      <div class="x_content">

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Answer</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @answers.each do |answer| %>
              <tr>
                <td><%= answer.answer  %></td>
                <td><%= answer.submission_date  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<div class="actionBar">
  <%= link_to 'Back', homeworks_path, :class => "btn btn-default" %>
</div>


