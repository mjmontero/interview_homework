<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= @homework.title %> <small><%= @homework.question %></small></h2>
        <div class="clearfix"></div>
      </div>


        <%= form_for @answer, :html => {class: "form-horizontal form-label-left"} do |f| %>
          <% if @answer.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

              <ul>
              <% @answer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>


          <%= f.hidden_field :student_id, :value => current_user.id%>
          <%= f.hidden_field :homework_id, :value => @homework.id%>
          <%= f.hidden_field :submission_date, :value => DateTime.now%>

          <div class="form-group">
            <%= f.label :answer, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_area :answer, autofocus: true, rows: "10", :required => true, :class => "form-control col-md-7 col-xs-12" %>
            </div>
          </div>
      


          <div class="ln_solid"></div>

          <div class="form-group">            
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= link_to 'Cancel', homeworks_path, :class => "btn btn-default" %>
              <%= f.submit 'Submit', :class => "btn btn-success" %>
            </div>
          </div>

        <% end %> 


      </div>
    </div>
  </div>
</div>


